.left-filtter-conversation
  height calc(100% - 60px)
  overflow overlay
  width 199px
  border-right 1px solid #dddddd
  padding-left 30px
  display inline-block
  h3
    color #4d4d4d
    margin-top 30px
    display inline-block
    width 100%
    margin-bottom 30px
    font-weight 600
  #list-filter-conversation
    ul
      li
        .fitler-by
          display inline-block
          width 100%
          margin-bottom 25px
          color #4d4d4d
          &:hover
            font-weight 600
          &.has-form
            margin-bottom 10px
        #filter-group-email
          border-left 1px solid #b7b7b7
          margin-bottom 10px
        #filter-group-last-seen
          border-left 1px solid #b7b7b7
          margin-bottom 10px
        #filter-group-web-sessions
          border-left 1px solid #b7b7b7
          margin-bottom 10px
        label
          display inline-block
          width 100%
          margin-left 15px
          font-size 12px
        input
          width 150px
          height 25px
          margin 10px 0px 10px 15px
          font-size 14px
          text-indent 15px
          border 1px solid #b7b7b7