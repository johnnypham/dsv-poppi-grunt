.info-user-chat
  display inline-block
  width 100%
  background #fff
  padding 10px 0px
  .left-user
    a
      img
        margin-left 15px
        width 30px
        height 30px
        float left
      span
        margin-left 10px
        top 5px
        font-size 14px
        position relative
        color #818181
      i
        position relative
        top 5px
        margin-left 8px
        font-size 10px
        color #9e9e9e
  .center-user
    a
      top 5px
      font-size 14px
      position relative
      color #1074ae
      i
        font-size 10px
        color #1d7cb2
        margin-left 10px
  .right-user
    text-align right
    a
      top 5px
      margin-right 15px
      font-size 14px
      position relative
      color #1074ae
      i
        color #858585
      span
        margin-left 8px
        color #858585
  .left-user
  .center-user
  .right-user
    width 33.333%
    display inline-block
    float left


.chat-info-toggle
  display none
  width calc(100% - 30px)
  padding 15px
  &.fadeInDown
    display inline-block
  h3
    font-size 14px
    margin 10px 0px 20px 0px
    color #888
    text-transform uppercase
    font-weight 400
  ul
    display inline-block
    width 50%
    float left
    li
      color #6b6b6b
      margin-bottom 15px
      i
        font-size 14px
        color #6b6b6b
      label
        font-weight 500
        text-transform uppercase
        margin 0 10px

.btn-tag
  padding 4px 15px
  border 1px solid #959595
  background none
  border-radius 30px
  font-size 14px
  margin-bottom 15px
  margin-right 15px
  color #888888
  display inline-block

.addTag
  display inline-block
  width 100%
  overflow-wrap normal
  white-space inherit
  .btn-tag
    i
      font-size 11px
      margin-right 5px
      &.icon-delete
        margin-left 10px

.btn-default-chat
  background #1074ae
  padding 8px 15px
  color #fff
  border-radius 4px

.actionUser
  display inline-block
  width 100%
  margin 25px 0px 0px
  .btn-default-chat
    margin-right 15px

