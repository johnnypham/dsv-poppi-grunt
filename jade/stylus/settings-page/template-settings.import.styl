.table-responsive
  table
    width 100%
    border 1px solid #959595
    color #4d4d4d
    tr
      border 1px solid #e1e1e1
      th
        font-weight 600
        text-align left
        padding 15px 0px
        text-indent 15px
        border 1px solid #e1e1e1
        &.tbwidth-20
          width 20%
        &.tbwidth-75
          width 75%
        &.tbwidth-5
          width 5%
      td
        border 1px solid #e1e1e1
        padding 15px 0px
        text-indent 15px
        &.tbwidth-20
          width 20%
        &.tbwidth-75
          width 75%
        &.tbwidth-5
          width 5%
        &.member-info
          img
            width 20px
            margin-right 10px
            position relative
            top 5px
        span
          margin-right 10px
          &.edit
            cursor pointer
            text-decoration underline
        &.action-table
          text-align center
          text-indent 0px
          width 45px
          .icon-delete
            color #aeaeae
            &:hover
              color #ff4f4f
        &.resend-email
          width 60px
          text-indent 0px
          padding 0px 15px
          a
            display inline-block
            background #1074ae
            text-align center
            color #fff
            padding 5px 15px
            text-indent 0
            font-size 11px
            font-weight 300
            border-radius 3px
