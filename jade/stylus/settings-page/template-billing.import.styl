.progress
  width 100%
  display inline-block

  .progress-custom-bg
    width 100%
    background-color #e1e1e1
    height 15px
    margin-bottom 20px
    border-radius 2px
    .progress-custom-percent
      display inline-block
      width 10%
      height 15px
      border-radius 1px
      background-color #1074ae
  span
    display inline-block
    width 100%
    margin-bottom 20px
    strong
      color #000
      font-weight 500
#billing-settings
  .group-form-custom
    input
      width 60%
.table-div
  .header-table
    span
      display inline-block
      width calc(25% - 20px)
      color #4d4d4d
      padding-left 20px
      height 40px
      line-height 40px
      font-weight 500
  .content-table
    margin-bottom 15px
    span
      line-height 40px
      width calc(25% - 20px)
      display inline-block
      padding-left 20px
      height 40px
      color #4d4d4d
      &.bg-gay
        cursor pointer
        background-color #e1e1e1
    &.show-toggle-invoices
      .toggle-invoices
        display inline-block
.toggle-invoices
  display none
  width 100%
  padding 20px 0px
  margin-bottom 15px
  margin-top 15px
  border 1px solid #d7d7d7
  .confirm
    margin 20px 0px 10px 0px
    display inline-block
    width calc(100%  - 20px)
    padding-left 20px
    color #c7c7c7
    font-weight 500
    strong
      color #1074ae
  .header-invoices
    span
      height 30px
      line-height 30px
  .content-invoices
    span
      height 30px
      line-height 30px
      font-size 16px
      color #4d4d4d
      font-weight 500

  .invoices-list
    border-top 2px solid #e1e1e1
    padding-top 10px
    width calc(100% - 40px)
    margin-left 20px
    padding-bottom 10px
    border-bottom 2px solid #e1e1e1
    margin-bottom 20px
    .header-invoices-list
      span
        display inline-block
        width calc(25% - 30px)
        padding-left 30px
        color #c7c7c7
        height 25px
        line-height 25px
        font-weight 500
        text-transform uppercase
        &.width375
          width 37.5%
          padding 0px
    .content-invoices-list
      span
        display inline-block
        width calc(25% - 30px)
        padding-left 30px
        color #333333
        height 25px
        line-height 25px
        text-transform uppercase
        &.width375
          width 37.5%
          padding 0px
  .status-invoices
    display inline-block
    width 40%
    float right
    .status
      padding 0
      width 14%
      line-height 15px
      text-align center
      i
        width 100%
        padding 5px 0
        border-radius 4px
        display inline-block
        color #fff
        background #47b32a
    .title-total
      width 23%
      text-align center
      padding 0px
      font-weight 500
    .total-price
      width 50%
      font-weight 500
