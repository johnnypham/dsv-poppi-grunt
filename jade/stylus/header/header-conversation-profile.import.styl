.poppi-chat
  .header-conversation-profile
    height 80px
    z-index 9
    .infor-conversation-profile
      padding 30px 0px 0px 30px
      display inline-block
      a
        display inline-block
        width 45px
        height 45px
        float left
        padding 0px
        margin-right 20px
        img
          margin 0px
      .user-info
        display inline-block
        width calc(100% - 65px)
        .media-heading
          font-size 24px
          color #fff
          margin-bottom 10px
        span
          color #fff
          font-weight 300
          font-size 14px
    .info-account-sign
      padding 50px 30px 0px 0px
      text-align right
      display inline-block
      float right
      .icon-sign-out
        font-size 18px
        color #fff
        margin-right 10px
      span
        color #fff
        position relative
        top -2px
        font-weight 300
