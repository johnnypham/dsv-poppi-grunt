.content-tabs-profile
  display block
  max-width 500px
  width 100%
  padding-bottom 40px
  margin 0 auto
  .avatar-form
    background #fff
    display inline-block
    width calc(100% - 60px)
    padding 30px
    img
      width 100px
      height 100px
    .form-avatar
      display inline-block
      width calc(100% - 130px)
      float right
      label
        display inline-block
        width 100%
        margin-bottom 20px
      .btnp
        text-transform uppercase
  #profile-Form
    background #fff
    display inline-block
    width calc(100% - 60px)
    padding 30px
  .actionUpdateProfile
    display inline-block
    width 100%
    text-align center
    margin-top 20px
    .btnp-default
      margin-right 15px