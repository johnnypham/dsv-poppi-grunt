.content-tabs-profile
  width 500px
  margin 0 auto
  .form-search-profile
    display inline-block
    width calc(100% - 30px)
    background #fff
    padding 15px
    border-radius 5px
    border 1px solid #e3e3e3
    img
      width 45px
      height 45px
      margin-right 10px
      display inline-block
      float left
    input
      width calc(100% - 60px)
      border 1px solid #898989
      font-size 14px
      display inline-block
      height 40px
      text-indent 20px

.hr
  display inline-block
  width 100%
  text-align center
  font-size 14px
  margin 20px 0px
  color #828282
  position relative
  text-transform uppercase
  &:before
    content ''
    position absolute
    left 0px
    z-index 1
    top 50%
    display inline-block
    width 100%
    height 1px
    background #c2c2c2
  span
    position relative
    background-color #ebebeb
    z-index 9
    display inline-block
    padding 0 25px

.info-profile-tabs-user
  display inline-block
  width calc(100% - 40px)
  background-color #fff
  padding 20px
  label
    display inline-block
    width 50%
    font-weight 500
    color #a4a4a4
    margin-bottom 20px
    float left
    text-align left
  span
    color #a4a4a4
    margin-bottom 20px
    display inline-block
    width 50%
    float left
    text-align right

.action-profile-tabs-user
  .btn-profile
    display inline-block
    width 100%
    padding 15px 0px
    color #fff
    background #1074ae
    text-align center
    margin-bottom 15px
    span
      display inline-block
      width 100%
      font-weight 600
      margin-bottom 10px
    i
      font-size 12px
    &.delete
      background #f45656